<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.meni2.roomActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="查詢訂單"
        android:id="@+id/textView11"
        android:layout_marginTop="85dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/imageButton13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="美食定位"
        android:id="@+id/textView12"
        android:layout_alignTop="@+id/textView11"
        android:layout_toEndOf="@+id/imageButton13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="已處理訂單"
        android:id="@+id/textView13"
        android:layout_marginTop="84dp"
        android:layout_below="@+id/imageButton11"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton12"
        android:layout_below="@+id/textView12"
        android:layout_toEndOf="@+id/textView13"
        android:background="@drawable/location" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton13"
        android:background="@drawable/imgres"
        android:layout_below="@+id/textView13"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton11"
        android:layout_alignTop="@+id/imageButton12"
        android:layout_alignStart="@+id/textView11"
        android:focusableInTouchMode="true"
        android:background="@drawable/search" />

</RelativeLayout>
